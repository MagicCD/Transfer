{
  "default": true,
  "MD001": true,      // header-increment - Headers should increment by one level at a time
  "MD003": {          // header-style - Header style
    "style": "atx"
  },
  "MD004": {          // ul-style - Unordered list style
    "style": "consistent"
  },
  "MD005": true,      // list-indent - Inconsistent indentation for list items at the same level
  "MD007": {          // ul-indent - Unordered list indentation
    "indent": 2
  },
  "MD010": {          // no-hard-tabs - Hard tabs
    "code_blocks": false
  },
  "MD013": false,     // line-length - Disable line length checking
  "MD022": true,      // blanks-around-headers - Headers should be surrounded by blank lines
  "MD025": {          // single-title/single-h1 - Multiple top-level headings in the same document
    "level": 1,
    "front_matter_title": ""
  },
  "MD031": true,      // blanks-around-fences - Fenced code blocks should be surrounded by blank lines
  "MD040": true,      // fenced-code-language - Fenced code blocks should have a language specified
  "MD041": {          // first-line-heading/first-line-h1 - First line in a file should be a top-level heading
    "front_matter_title": ""
  },
  "MD046": {          // code-block-style - Code block style
    "style": "fenced"
  }
} 