# 文件快传应用程序环境变量配置
# 基于 .env.example 创建

# 应用基础配置
SECRET_KEY=your-secret-key-here
SERVER_PORT=5000
FLASK_ENV=development

# 文件上传配置
UPLOAD_FOLDER=uploads
TEMP_CHUNKS_DIR=uploads/.temp_chunks
MAX_CONTENT_LENGTH=5368709120
CHUNK_SIZE=5242880
CHUNKED_UPLOAD_THRESHOLD=52428800

# 缓存和临时文件配置
FILES_CACHE_TTL=5
TEMP_FILES_MAX_AGE=2

# 日志配置
LOG_LEVEL=DEBUG
